{
	"name": "dynamics-365-toolkit",
	"displayName": "dynamics-365-toolkit",
	"description": "A toolkit for working with Dynamics 365 within VSCode by CloudSmith Consulting LLC.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:dynamicsConnectionsView",
		"onCommand:cloudSmith.unpackDynamicsSolutionCommand",
		"onCommand:cloudSmith.deployDynamicsSolutionCommand",
		"onCommand:cloudSmith.generateDynamicsEntitiesCommand"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "CloudSmith",
			"properties": {
				"cloudSmith.crmSdkRootPath": {
					"type": "string",
					"default": "C:\\Deploy\\Tools",
					"description": "The full path to the root of the CRM SDK installation on your computer"
				}
			}
		},
		"commands": [
			{
				"command": "cloudSmith.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "cloudSmith.addEntry",
				"title": "Add"
			},
			{
				"command": "cloudSmith.editEntry",
				"title": "Edit",
				"icon": {
					"light": "resources/light/edit.svg",
					"dark": "resources/dark/edit.svg"
				}
			},
			{
				"command": "cloudSmith.deleteEntry",
				"title": "Delete"
			},
			{
				"command": "cloudSmith.unpackDynamicsSolutionCommand",
				"title": "CloudSmith: Unpack Solution From Dynamics Server"
			},
			{
				"command": "cloudSmith.deployDynamicsSolutionCommand",
				"title": "CloudSmith: Deploy Solution to Dynamics Server"
			},
			{
				"command": "cloudSmith.generateDynamicsEntitiesCommand",
				"title": "CloudSmith: Generate Entities From Dynamics Server"
			},
			{
				"command": "cloudSmith.downloadDynamicsScriptsCommand",
				"title": "CloudSmith: Download supporting Dynamics scripts from GitHub"
			},
			{
				"command": "cloudSmith.getSolutionsCommand",
				"title": "CloudSmith: Get Dynamics Solutions associated with the current conection."
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "view-container",
					"title": "CloudSmith",
					"icon": "media/dynamics.png"
				}
			]
		},
		"views": {
			"view-container": [
				{
					"id": "dynamicsConnectionsView",
					"name": "Dynamics Connections"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "cloudSmith.refreshEntry",
					"group": "navigation"
				},
				{
					"command": "cloudSmith.addEntry"
				}
			],
			"view/item/context": [
				{
					"command": "cloudSmith.editEntry",
					"group": "inline"
				},
				{
					"command": "cloudSmith.deleteEntry"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.14.19",
		"@types/node-fetch": "^2.5.2",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode-test": "^1.2.0"
	},
	"dependencies": {
		"adal-node": "^0.2.1",
		"httpntlm": "^1.7.6",
		"node-fetch": "^2.6.0"
	}
}
