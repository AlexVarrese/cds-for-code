{
	"name": "dynamics-365-toolkit",
	"displayName": "dynamics-365-toolkit",
	"publisher": "cloudsmith",
	"description": "A toolkit for working with Dynamics 365 within VSCode by CloudSmith Consulting LLC.",
	"version": "0.1.0",
	"preview": true,
	"engines": {
		"vscode": "^1.34.0"
	},
	"icon": "images/cloudsmith-logo-only-50px.png",
	"categories": [
		"Extension Packs",
		"Other"
	],
	"keywords": [
		"Dynamics",
		"Dynamics 365",
		"CRM"
	],
	"activationEvents": [
		"onView:cs.dynamics.viewContainers.connections",
		"onCommand:cs.dynamics.deployment.addSolutionComponent",
		"onCommand:cs.dynamics.deployment.removeSolutionComponent",
		"onCommand:cs.dynamics.deployment.registerPluginAssembly",
		"onCommand:cs.dynamics.extension.clearTerminal",
		"onCommand:cs.dynamics.extension.createProjectFromTemplate",
		"onCommand:cs.dynamics.extension.createTerminal",
		"onCommand:cs.dynamics.extension.deleteProjectTemplate",
		"onCommand:cs.dynamics.extension.downloadRequiredScripts",
		"onCommand:cs.dynamics.extension.openProjectTemplatesFolder",
		"onCommand:cs.dynamics.extension.saveProjectAsTemplate",
		"onCommand:cs.dynamics.powerShell.generateEntities",
		"onCommand:cs.dynamics.powerShell.packSolution.explorer",
		"onCommand:cs.dynamics.powerShell.packSolution",
		"onCommand:cs.dynamics.powerShell.unpackSolution",
		"onCommand:cs.dynamics.powerShell.unpackSolution.explorer",
		"onCommand:cs.dynamics.controls.pluginStep.open",
		"onCommand:cs.dynamics.controls.svcUtilConfig.configure"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Dynamics 365 CE VSCode Toolkit",
			"properties": {
				"cs.dynamics.configuration.tools.sdkInstallPath": {
					"type": "string",
					"default": "C:\\Deploy\\Tools",
					"description": "The full path to the root of the CRM SDK installation on your computer"
				},
				"cs.dynamics.configuration.tools.updateSource": {
					"type": "string",
					"format": "uri",
					"default": "https://raw.githubusercontent.com/cloudsmithconsulting/Dynamics365-VsCode-Samples/master/",
					"description": "The URL where supporting scripts are located"
				},
				"cs.dynamics.configuration.tools.updateChannel": {
					"type": "string",
					"default": "production",
					"enum": ["production", "beta"],
					"enumDescriptions": [
						"Production updates only",
						"Beta updates"
					],
					"description": "The update channel to use"
				},
				"cs.dynamics.configuration.explorer.showDefaultSolution": {
					"type": "boolean",
					"default": "true",
					"description": "Show the Default Solution in the Dynamics explorer pane"
				},
				"cs.dynamics.configuration.templates.templatesDirectory": {
					"type": "string",
					"description": "Directory to read/store project template folders"
				},
				"cs.dynamics.configuration.templates.usePlaceholders": {
					"type": "boolean",
					"default": true,
					"description": "Look for and replace placeholders in template (e.g. #{author})"
				},
				"cs.dynamics.configuration.templates.placeholderRegExp": {
					"type": "string",
					"default": "#{(\\w+)?}",
					"description": "Regular expression for detecting placeholders (e.g. \"#{(\\w+?)}\").  The first capture group dictates the placeholder key."
				},
				"cs.dynamics.configuration.templates.placeholders": {
					"type": "object",
					"default": {},
					"description": "List of placeholders, in key-value string pairs."
				}
			}
		},
		"commands": [
			{
				"command": "cs.dynamics.controls.pluginStep.open",
				"title": "Open plugin step",
				"category": "UserInterface"
			},
			{
				"command": "cs.dynamics.controls.svcUtilConfig.configure",
				"title": "Configure entity code generation from the CrmSvcUtil",
				"category": "Dynamics 365 CE"
			},
			{
				"command": "cs.dynamics.controls.treeView.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/icons/default/refresh.light.svg",
					"dark": "resources/icons/default/refresh.dark.svg"
				},
				"category": "UserInterface"
			},
			{
				"command": "cs.dynamics.controls.treeView.addEntry",
				"title": "New",
				"icon": {
					"light": "resources/icons/default/add.light.svg",
					"dark": "resources/icons/default/add.dark.svg"
				},
				"category": "UserInterface"
			},
			{
				"command": "cs.dynamics.controls.treeView.editEntry",
				"title": "Edit",
				"icon": {
					"light": "resources/icons/default/edit.light.svg",
					"dark": "resources/icons/default/edit.dark.svg"
				},
				"category": "UserInterface"
			},
			{
				"command": "cs.dynamics.controls.treeView.deleteEntry",
				"title": "Delete",
				"icon": {
					"light": "resources/icons/default/delete.light.svg",
					"dark": "resources/icons/default/delete.dark.svg"
				},
				"category": "UserInterface"
			},
			{
				"command": "cs.dynamics.controls.treeView.clickEntry",
				"title": "Click",
				"category": "UserInterface"
			},
			{
				"command": "cs.dynamics.controls.treeView.inspectEntry",
				"title": "Inspect",
				"category": "UserInterface"
			},
			{
				"command": "cs.dynamics.controls.treeView.openConnection",
				"title": "Open",
				"category": "UserInterface"
			},
			{
				"command": "cs.dynamics.controls.treeView.addEntryToSolution",
				"title": "Add to Solution",
				"category": "UserInterface"
			},
			{
				"command": "cs.dynamics.controls.treeView.removeEntryFromSolution",
				"title": "Remove from Solution",
				"category": "UserInterface"
			},
			{
				"command": "cs.dynamics.deployment.addSolutionComponent",
				"title": "Add component to a Dynamics 365 Solution",
				"category": "Dynamics 365 CE"
			},
			{
				"command": "cs.dynamics.deployment.removeSolutionComponent",
				"title": "Remove a component from a Dynamics 365 Solution",
				"category": "Dynamics 365 CE"
			},
			{
				"command": "cs.dynamics.deployment.registerPluginAssembly",
				"title": "Register or update a plugin assembly",
				"category": "Dynamics 365 CE"
			},
			{
				"command": "cs.dynamics.extension.clearTerminal",
				"title": "Clear the Dynamics 365 terminal",
				"category": "Dynamics 365 CE"
			},
			{
				"command": "cs.dynamics.extension.createTerminal",
				"title": "Open the Dynamics 365 terminal",
				"category": "Dynamics 365 CE"
			},
			{
				"command": "cs.dynamics.extension.downloadRequiredScripts",
				"title": "Download required PowerShell scripts for VSCode extension from GitHub",
				"category": "Dynamics 365 CE"
			},
			{
				"command": "cs.dynamics.extension.openProjectTemplatesFolder",
				"title": "Open project templates folder",
				"category": "Dynamics 365 CE"
			},
			{
				"command": "cs.dynamics.extension.saveProjectAsTemplate",
				"title": "Save folder contents as template",
				"category": "Dynamics 365 CE"
			},
			{
				"command": "cs.dynamics.extension.deleteProjectTemplate",
				"title": "Delete project template from library",
				"category": "Dynamics 365 CE"
			},
			{
				"command": "cs.dynamics.extension.createProjectFromTemplate",
				"title": "Create project from a template",
				"category": "Dynamics 365 CE"
			},
			{
				"command": "cs.dynamics.powerShell.unpackSolution",
				"title": "Download & unpack solution from a registered Dynamics server",
				"category": "Dynamics 365 CE"
			},
			{
				"command": "cs.dynamics.powerShell.unpackSolution.explorer",
				"title": "Export to workspace",
				"category": "Dynamics 365 CE"
			},
			{
				"command": "cs.dynamics.powerShell.packSolution",
				"title": "Pack & deploy solution to a registerd Dynamics server",
				"category": "Dynamics 365 CE"
			},
			{
				"command": "cs.dynamics.powerShell.packSolution.explorer",
				"title": "Deploy to Dynamics 365",
				"category": "Dynamics 365 CE"
			},
			{
				"command": "cs.dynamics.powerShell.generateEntities",
				"title": "Generate entity code from metadata on a registered Dynamics server",
				"category": "Dynamics 365 CE"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "view-container",
					"title": "Dynamics 365 CE",
					"icon": "resources/images/dynamics.png"
				}
			]
		},
		"views": {
			"view-container": [
				{
					"id": "cs.dynamics.viewContainers.connections",
					"name": "Connections"
				}
			]
		},
		"menus": {
			"explorer/context": [
				{
					"command": "cs.dynamics.extension.createProjectFromTemplate",
					"when": "explorerResourceIsFolder",
					"group": "projectTemplates@1"
				},
				{
					"command": "cs.dynamics.extension.saveProjectAsTemplate",
					"when": "explorerResourceIsFolder",
					"group": "projectTemplates@2"
				},
				{
					"command": "cs.dynamics.powerShell.packSolution.explorer",
					"when": "explorerResourceIsFolder",
					"group": "zzz_azuretools_deploy@3"
				}
			],
			"view/title": [
				{
					"command": "cs.dynamics.controls.treeView.refreshEntry",
					"group": "navigation",
					"when": "view == cs.dynamics.viewContainers.connections"
				},
				{
					"command": "cs.dynamics.controls.treeView.addEntry",
					"group": "navigation",
					"when": "view == cs.dynamics.viewContainers.connections"
				}
			],
			"view/item/context": [
				{
					"command": "cs.dynamics.controls.treeView.addEntry",
					"group": "inline",
					"when": "view == cs.dynamics.viewContainers.connections && viewItem =~ /^(Solutions|Plugins|Entities|OptionSets|WebResources|Processes|Attributes|Forms|Views|Entries|PluginType)$/"
				},
				{
					"command": "cs.dynamics.controls.treeView.editEntry",
					"group": "inline",
					"when": "view == cs.dynamics.viewContainers.connections && viewItem =~ /^(Connection|Solution|Entity|OptionSet|WebResource|Process|Attribute|Form|View|Entry|PluginStep)$/"
				},
				{
					"command": "cs.dynamics.controls.treeView.inspectEntry",
					"group": "group@2",
					"when": "view == cs.dynamics.viewContainers.connections && viewItem =~ /^(Solution|Entity|OptionSet|WebResource|Process|Plugin|PluginStep|PluginType|PluginStepImage|Attribute|Form|View|Entry)$/"
				},
				{
					"command": "cs.dynamics.powerShell.unpackSolution.explorer",
					"group": "deployment@3",
					"when": "view == cs.dynamics.viewContainers.connections && viewItem =~ /^(Solution)$/"
				},
				{
					"command": "cs.dynamics.controls.treeView.deleteEntry",
					"group": "inline",
					"when": "view == cs.dynamics.viewContainers.connections && viewItem =~ /^(Connection)$/"
				},
				{
					"command": "cs.dynamics.controls.treeView.addEntryToSolution",
					"group": "deployment@1",
					"when": "view == cs.dynamics.viewContainers.connections && viewItem =~ /^(Plugin|Entity|OptionSet|WebResource|Process)$/"
				},
				{
					"command": "cs.dynamics.controls.treeView.removeEntryFromSolution",
					"group": "deployment@2",
					"when": "view == cs.dynamics.viewContainers.connections && viewItem =~ /^(Plugin|Entity|OptionSet|WebResource|Process)$/"
				},
				{
					"command": "cs.dynamics.controls.treeView.refreshEntry",
					"group": "group@1",
					"when": "view == cs.dynamics.viewContainers.connections && viewItem =~ /^(Solutions|Plugins|Entities|OptionSets|WebResources|Processes|Plugin|Attributes|Forms|Views|Entries)$/"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/lodash": "^4.14.144",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.14.19",
		"@types/node-fetch": "^2.5.2",
		"@types/vscode": "^1.38.0",
		"@types/xml2js": "^0.4.5",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode-test": "^1.2.0"
	},
	"dependencies": {
		"adal-node": "^0.2.1",
		"httpntlm": "^1.7.6",
		"jsoneditor": "^7.1.0",
		"lodash": "^4.17.15",
		"node-fetch": "^2.6.0",
		"typescript-linq": "^1.0.6",
		"xml2js": "^0.4.22"
	}
}
