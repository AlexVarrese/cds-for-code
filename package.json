{
	"name": "dynamics-365-toolkit",
	"displayName": "dynamics-365-toolkit",
	"description": "A toolkit for working with Dynamics 365 within VSCode by CloudSmith Consulting LLC.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:cs.dynamics.viewContainers.connections",
		"onCommand:cs.dynamics.powerShell.unpackSolution",
		"onCommand:cs.dynamics.powerShell.packSolution",
		"onCommand:cs.dynamics.powerShell.generateEntities",
		"onCommand:cs.dynamics.extension.downloadRequiredScripts"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Dynamics 365 CE VSCode Toolkit",
			"properties": {
				"cs.dynamics.configuration.sdkInstallPath": {
					"type": "string",
					"default": "C:\\Deploy\\Tools",
					"description": "The full path to the root of the CRM SDK installation on your computer"
				},
				"cs.dynamics.configuration.showDefaultSolution": {
					"type": "boolean",
					"default": "true",
					"description": "Show the Default Solution in the Dynamics explorer pane"
				}
			}
		},
		"commands": [
			{
				"command": "cs.dynamics.controls.treeView.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/icons/light/refresh.svg",
					"dark": "resources/icons/dark/refresh.svg"
				}
			},
			{
				"command": "cs.dynamics.controls.treeView.addEntry",
				"title": "New",
				"icon": {
					"light": "resources/icons/light/plus.svg",
					"dark": "resources/icons/dark/plus.svg"
				}
			},
			{
				"command": "cs.dynamics.controls.treeView.editEntry",
				"title": "Edit",
				"icon": {
					"light": "resources/icons/light/edit.svg",
					"dark": "resources/icons/dark/edit.svg"
				}
			},
			{
				"command": "cs.dynamics.controls.treeView.deleteEntry",
				"title": "Delete"
			},
			{
				"command": "cs.dynamics.controls.treeView.clickEntry",
				"title": "Click"
			},
			{
				"command": "cs.dynamics.controls.treeView.openConnection",
				"title": "Open"
			},
			{
				"command": "cs.dynamics.powerShell.unpackSolution",
				"title": "Dynamics 365 CE: Download & unpack solution from a registered Dynamics server"
			},
			{
				"command": "cs.dynamics.powerShell.packSolution",
				"title": "Dynamics 365 CE: Pack & deploy solution to a registerd Dynamics server"
			},
			{
				"command": "cs.dynamics.powerShell.generateEntities",
				"title": "Dynamics 365 CE: Generate entity code from metadata on a registered Dynamics server"
			},
			{
				"command": "cs.dynamics.extension.downloadRequiredScripts",
				"title": "Dynamics 365 CE: Download required PowerShell scripts for VSCode extension from GitHub"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "view-container",
					"title": "Dynamics 365 CE",
					"icon": "resources/images/dynamics.png"
				}
			]
		},
		"views": {
			"view-container": [
				{
					"id": "cs.dynamics.viewContainers.connections",
					"name": "Connections"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "cs.dynamics.controls.treeView.refreshEntry",
					"group": "navigation"
				},
				{
					"command": "cs.dynamics.controls.treeView.addEntry",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "cs.dynamics.controls.treeView.addEntry",
					"group": "inline",
					"when": "viewItem == Solutions || viewItem == Plugins || viewItem == Entities || viewItem == WebResources || viewItem == Entries"
				},
				{
					"command": "cs.dynamics.controls.treeView.editEntry",
					"group": "inline",
					"when": "viewItem == Connection || viewItem == Solution || viewItem == Entity || viewItem == WebResource || viewItem == Entry"
				},
				{
					"command": "cs.dynamics.controls.treeView.deleteEntry",
					"group": "inline",
					"when": "viewItem == Connection"
				},
				{
					"command": "cs.dynamics.controls.treeView.refreshEntry",
					"group": "inline",
					"when": "viewItem == Solutions || viewItem == Plugins || viewItem == Entities || viewItem == WebResources || viewItem == Entries"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.14.19",
		"@types/node-fetch": "^2.5.2",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode-test": "^1.2.0"
	},
	"dependencies": {
		"adal-node": "^0.2.1",
		"httpntlm": "^1.7.6",
		"node-fetch": "^2.6.0",
		"typescript-linq": "^1.0.6"
	}
}
