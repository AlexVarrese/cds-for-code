{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run webpack jobs",
			"type": "npm",
			"script": "pack",
			"problemMatcher": []
		},
		{
			"label": "Create VSX file",
			"type": "npm",
			"script": "vscode:package",
			"problemMatcher": []
		},
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}	
	]
}