// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Create VSX file",
			"type": "npm",
			"script": "vscode:package",
			"problemMatcher": []
		},
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
        {
            "type": "shell",
            "label": "grunt monitor",
            "command": "grunt monitor",
            "problemMatcher": [ "$gulp-tsc" ],
        }
	]
}